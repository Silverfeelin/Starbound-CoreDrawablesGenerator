<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessageBox" MinWidth="368" Width="368" MinHeight="140" Height="140">
  <Grid>
    <!-- VerticalAlignment Center disables wrapping without MaxWidth! -->
    <TextBlock Name="tbxMessage" MaxWidth="378" VerticalAlignment="Center" TextWrapping="Wrap"  Margin="10 10 10 50" TextAlignment="Center">
      Message
    </TextBlock>
    <Button HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 10" Width="60" Height="30" Name="btnClose">Close</Button>
  </Grid>
</Window>